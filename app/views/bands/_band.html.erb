<%if action == :index%>
  <%= link_to band.name, band_url(band.id)  %>
<% end %>
<ul>
  <% band.albums.order(:year).each do |album| %>
  <li><%= link_to "#{album.title}", album_url(album.id) %> </li>
  <% end %>
</ul>

<% if action == :show %>
  <%= button_to "Add New Album", new_band_album_url(band.id), method: :get %>
  <%= button_to "Edit Band", edit_band_url(band.id), method: :get %>
  <%= button_to "Delete Band", band_url(band.id), method: :delete %>

<% end %>
<br><br>
